{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "strict": false,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "es2020",
        "dom"
      ],
      "skipLibCheck": true
    },
    "exclude": [
      "node_modules"
    ]
  }